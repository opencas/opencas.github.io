<%- js('//cdn.bootcss.com/jquery/3.3.1/jquery.min.js') %>
<%- js('assets/js/bootstrap.bundle.min.js') %>
<%- js('assets/js/fontawesome-all.min.js') %>
<script type="text/javascript">
$(document).ready(function() {
    $('body').popover({
        selector: '[rel=popover]',
        trigger: 'focus',
        content: '<img class="img-thumbnail" src="/assets/imgs/wechat.jpg">',
        placement: "top",
        html: true
    });
    $.each($('.event .time'), function (index, time) {
        var time = $(this).attr('datetime');
        var badge = $(this).parents('.event').find('.badge');
        if (Date.parse(time) > new Date().getTime()) {
            badge.text("Upcoming");
            badge.addClass('badge-success');
        } else {
            badge.text("Finished");
            badge.addClass('badge-warning');
        }
    });
    $.each($('.events-list .time'), function (index, time) {
        var time = $(this).attr('datetime');
        var badge = $(this).parents('li').find('.badge');
        if (Date.parse(time) > new Date().getTime()) {
            badge.text("Upcoming");
            badge.addClass('badge-success');
        } else {
            badge.text("Finished");
            badge.addClass('badge-warning');
        }
    });
});
</script>
