<div class="row">
  <% if (post.thumbnail) { %>
    <div class="col-lg-9 pl-0">
  <% } else { %>
    <div class="col-lg-12 pl-0">
  <% } %>
      <div class="col-md-12 archive-post-title">
        <%- partial('post/title') %>
      </div>
      <div class="col-md-12 archive-post-meta">
        <%- partial('post/date', {class_name: 'archive-article-date', date_format: 'YYYY/MM/DD'}) %> |
        <a href="<%- post.permalink %>#disqus_thread" class="article-comment-link">Comments</a> |
        <%- partial('post/tag') %>
      </div>
      <div class="col-md-12">
        <div class="blog-item pb-4">
          <%- post.lede || post.excerpt %>
        </div>
        <a href="<%- post.permalink %>" class="archive-post-more">
          <%= theme.excerpt_link %>
          <i class="fas fa-angle-double-right"></i>
        </a>
      </div>
    </div>
    <% if (post.thumbnail) { %>
    <div class="col-lg-3">
      <%- image_tag(post.path + post.thumbnail, {class: "img-responsive", style: "max-width: 100%"}) %>
    </div>
    <% } %>
    <div class="col-lg-12">
      <hr class="blog-post-sep">
    </div>
</div>